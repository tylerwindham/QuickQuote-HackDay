<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/basic_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:addStatesFromChildren="false"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/basic_background"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/basic_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Basic"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/basic_coverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="Bodily Injury: $25k/$50k\nProperty Damage: $25k"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/basic_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="$407.64 /6 mo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buy_basic_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Buy Now" />

        <Button
            android:id="@+id/customize_basic_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="Customize" />

    </android.support.v7.widget.CardView>

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/similar_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/similar_background"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/similar_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Similar"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/similar_coverages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="Bodily Injury: $50k/$100k\nProperty Damage: $50k"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/similar_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="$1,022.75 /6 mo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_similar_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Buy Now" />

        <Button
            android:id="@+id/customize_similar_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="Customize" />

    </android.support.v7.widget.CardView>

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/premium_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/premium_background"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/premium_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Premium"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/premium_coverages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="Bodily Injury: $100k/$300k\nProperty Damage: $100k"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/premium_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="$1,124.65 /6 mo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_premium_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Buy Now" />

        <Button
            android:id="@+id/customize_premium_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="Customize" />

    </android.support.v7.widget.CardView>


</LinearLayout>